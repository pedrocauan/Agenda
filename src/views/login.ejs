<%- include("includes/head.ejs") %>
  <%- include("includes/nav.ejs") %>

    <div class="container">
      <div class="row">
        <div class="cow-lg-2"></div>

        <div class="cow-lg-8 my-3">
          <h1 class="text-center">Criar conta ou entrar</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

          <div class="row">
            <div class="col-lg">
              <!--CADASTRO-->
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda não possui uma conta, preencha o formulário abaixo</p>
              <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value= <%= csrfToken %> >
                <!--EMAIL-->
                <div class="form-group">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Criar conta</button>
              </form>
            </div>
            <!--LOGIN-->
            <div class="col-lg">
              <h4>Entrar no sistema</h4>
              <p>Se você já tem uma conta, faça login abaixo: </p>

              <form action="/login/login" method="POST">
                <!--EMAIL-->
                <div class="form-group">
                  <label>Seu email</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="form-group">
                  <label>Sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
              </form>

            </div>
          </div>

        </div>
        <!--cow-lg-8-->

        <div class="cow-lg-2"></div>
      </div>
    </div>


    <%- include("includes/footer.ejs") %>
<%- include("includes/head.ejs") %>
  <%- include("includes/nav.ejs") %>

    <div class="container">
      <div class="row">
        <div class="cow-lg-2"></div>

        <div class="cow-lg-8 my-3">
          <h1 class="text-center">Contato</h1>
          <p class="text-center lead">Crie ou edite seu contato abaixo</p>
          <!-- Mensagem de erro-->
          <%- include("includes/messages") %>

          <% if(contato._id) { %>
            <form action="/contato/edit/<%= contato._id %>" method="POST">
            
          <% } else { %>
            <form action="/contato/register" method="POST">
          <% } %>
              <input type="hidden" name="_csrf" value=<%=csrfToken %> >
              <!--Nome-->
              <div class="form-group my-3 ">
                <label>Nome</label>
                <input value="<%= contato.nome %>" type="text" class="form-control" name="nome">
              </div>
              <!--Sobrenome-->
              <div class="form-group my-3">
                <label>sobrenome</label>
                <input value="<%= contato.sobrenome %>"text" class="form-control" name="sobrenome">
              </div>
              <!--Email-->
              <div class="form-group my-3">
                <label>Email</label>
                <input value="<%= contato.email %>"email" class="form-control" name="email">
              </div>
              <!--Telefone-->
              <div class="form-group my-3">
                <label>telefone</label>
                <input value="<%= contato.telefone %>"tel" class="form-control" name="telefone">
              </div>


              <button type="submit" class="btn btn-primary">Salvar</button>
          </form>
       
        </div>
        <!--cow-lg-8-->

        <div class="cow-lg-2"></div>
      </div>
    </div>


    <%- include("includes/footer.ejs") %>